<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/content_top_padding"
    android:paddingBottom="@dimen/content_top_padding"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_image_size"
        android:layout_height="@dimen/avatar_image_size"
        android:contentDescription="@string/avatar_image_content_description"
        app:srcCompat="@drawable/ic_placeholder_avatar" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/content_top_padding"
        tools:text="User" />

</LinearLayout>